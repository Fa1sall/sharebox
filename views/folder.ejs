<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ShareBox | <%= folder.name %></title>
    <link rel="stylesheet" href="/styles/output.css" />
    <link rel="icon" type="image/png" href="/images/logo2.png" />
    <script src="/scripts/bytesConverter.js"></script>
    <script>
      function openModal(id) {
        document.getElementById(id).classList.remove("hidden");
      }
      function closeModal(id) {
        document.getElementById(id).classList.add("hidden");
      }

      function toggleMenu(id) {
        const menu = document.getElementById(id);
        menu.classList.toggle("hidden");
      }

      function copyLink(link) {
        navigator.clipboard.writeText(link);
        const btn = event.target;
        btn.textContent = "Copied!";
        setTimeout(() => (btn.textContent = "Copy"), 1500);
      }

      let selectedFileName = null;
      function openShareModal(fileName) {
        selectedFileName = fileName;
        closeAllMenus();
        openModal("share-modal");
        document.getElementById("share-link").value = "";
      }

      function closeAllMenus() {
        document.querySelectorAll(".file-menu").forEach((m) => m.classList.add("hidden"));
      }

      function generateMockLink() {
        const duration = document.querySelector('input[name="duration"]:checked');
        if (!duration) return;
        const link = `https://mock-supabase.co/${selectedFileName}?exp=${duration.value}`;
        document.getElementById("share-link").value = link;
      }
    </script>
  </head>
  <body class="min-h-screen bg-bg1 text-headline flex flex-col">
    <%- include('partials/navbar') %>

    <main class="flex flex-col items-center flex-1 px-4 py-8">
      <div class="w-full max-w-6xl flex flex-col sm:flex-row gap-3 justify-center sm:justify-between items-center mb-6">
        <a href="/folders" class="max-w-[160px] w-full text-btn-primary-bg hover:underline font-semibold">&larr; Back to Folders</a>
        <h1 class="text-2xl text-center font-bold text-headline max-w-full w-full truncate"><%= folder.name %></h1>
        <button onclick="openModal('upload-modal')" class="bg-btn-primary-bg hover:bg-btn-primary-hover text-white text-center font-semibold rounded max-w-[160px] w-full px-2 py-2 transition">
          Upload Files
        </button>
      </div>

      <% if (!files || files.length === 0) { %>
        <div class="text-center text-gray-300 mt-20">
          <h2 class="text-2xl font-bold mb-2">No Files Yet</h2>
          <p>Start by uploading files using the <b>Upload</b> button above</p>
        </div>
      <% } else { %>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6 w-full max-w-6xl">
          <% files.forEach((file, i) => { %>
            <div class="relative bg-bg2 border border-gray-600 rounded-xl p-7 flex flex-col items-center shadow-md">
              <button onclick="toggleMenu('menu-<%= i %>')" class="absolute top-2 right-2 text-gray-400 hover:text-gray-200 cursor-pointer">
                &#x22EE;
              </button>

              <svg xmlns="http://www.w3.org/2000/svg" class="w-15 h-15 mb-2 fill-btn-primary-bg" viewBox="0 0 50 50">
                <path d="M7 2v46h36V14.6L30.4 2H7zm2 2h20v12h12v30H9V4zm22 1.4L39.6 14H31V5.4z"/>
              </svg>

              <span class="text-sm text-headline font-bold text-center truncate w-full max-w-full" title="<%= file.name %>">
                <%= file.name%>
              </span>
              <span class="text-sm text-icon-tertiary font-bold text-center truncate w-full max-w-full"><%= file.name.split(".")[1].toUpperCase() %></span>

              <span class="text-sm font-mono">
                <% function bytesToMB(bytes){ %>
                 <% if (bytes < 1024 * 1024) { %>
                   <% return (bytes / 1024).toFixed(2) + " KB"; %>
                  <% } else { %>
                    <% return (bytes / (1024 * 1024)).toFixed(2) + " MB"; %>
                  <% } %>
                <% } %>
                <%= bytesToMB(parseInt(file.size, 10)) %>
              </span>

              <div id="menu-<%= i %>" class="file-menu hidden absolute top-10 right-2 bg-bg2 border border-gray-600 rounded-md shadow-lg w-36 flex flex-col z-20">
                <button class="hover:bg-bg1 text-left px-3 py-2 text-sm">File Info</button>
                <button class="hover:bg-bg1 text-left px-3 py-2 text-sm">Download</button>
                <form action="/files/<%= file.id %>/delete" method="post">
                  <button type="submit" class="hover:bg-bg1 w-full text-left px-3 py-2 text-sm text-red-400">Delete</button>
                </form>
                <button onclick="openShareModal('<%= file.name %>')" class="hover:bg-bg1 text-left px-3 py-2 text-sm text-btn-primary-bg">Share</button>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </main>

    <div id="upload-modal" class="fixed hidden inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50">
      <div class="bg-bg2 text-headline p-8 rounded shadow-lg w-full max-w-md relative">
        <button onclick="closeModal('upload-modal')" class="absolute top-2 right-2 text-gray-400 hover:text-gray-200 text-2xl">&times;</button>
        <h2 class="text-xl font-bold mb-4 text-center">Upload Files</h2>
        <form action="/folders/<%= folder.id %>/upload" method="post" enctype="multipart/form-data" class="flex flex-col gap-4">
          <input type="file" name="files" multiple required
            class="border-2 border-gray-400 rounded px-3 py-2 focus:border-btn-primary-bg outline-none bg-bg1 text-sm"/>
          <button type="submit" class="bg-btn-primary-bg hover:bg-btn-primary-hover text-white font-semibold rounded py-2 transition">
            Upload
          </button>
        </form>
      </div>
    </div>

    <div id="share-modal" class="fixed hidden inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50">
      <div class="bg-bg2 text-headline p-8 rounded shadow-lg w-full max-w-lg relative">
        <button onclick="closeModal('share-modal')" class="absolute top-2 right-2 text-gray-400 hover:text-gray-200 text-2xl">&times;</button>
        <h2 class="text-xl font-bold mb-4 text-center">Share Public URL</h2>
        <p class="text-sm text-gray-400 mb-4 text-center">Select Visibility Duration</p>

        <div class="grid grid-cols-3 gap-3 mb-4">
          <% ["5m","30m","1h","1d","7d","30d"].forEach((t,i)=>{ %>
            <label class="flex items-center justify-center border border-gray-500 rounded py-2 cursor-pointer hover:bg-bg1">
              <input type="radio" name="duration" value="<%= t %>" class="hidden peer" />
              <span class="peer-checked:text-btn-primary-bg"><%= t==="5m"?"5 min":t==="30m"?"30 min":t==="1h"?"1 hour":t==="1d"?"1 day":t==="7d"?"7 days":"30 days" %></span>
            </label>
          <% }) %>
        </div>

        <div class="flex items-center border border-gray-600 rounded px-3 py-2 mb-4">
          <input id="share-link" type="text" readonly placeholder="https://mock.supabase.co/..."
            class="bg-transparent flex-1 outline-none text-sm text-gray-300"/>
          <button onclick="copyLink(document.getElementById('share-link').value)" class="text-xs text-btn-primary-bg ml-2">Copy</button>
        </div>

        <div class="flex justify-end gap-3">
          <button onclick="closeModal('share-modal')" class="border border-gray-500 rounded px-4 py-2 text-sm hover:bg-bg1">Cancel</button>
          <button onclick="generateMockLink()" class="bg-btn-primary-bg hover:bg-btn-primary-hover text-white font-semibold rounded px-4 py-2 text-sm transition">
            Get Link
          </button>
        </div>
      </div>
    </div>
  </body>
</html>
