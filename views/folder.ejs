<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ShareBox | <%= folder.name %></title>
    <link rel="stylesheet" href="/styles/output.css" />
    <link rel="icon" type="image/png" href="/images/logo2.png" />
    <script src="/scripts/fileMenu.js" defer></script>
  </head>
  <body class="min-h-screen bg-bg1 text-headline flex flex-col">
    <%- include('partials/navbar') %>

    <main class="flex flex-col items-center flex-1 px-4 py-8">
      <div class="w-full max-w-6xl flex flex-col sm:flex-row gap-3 justify-center sm:justify-between items-center mb-6">
        <a href="/folders" class="max-w-[160px] w-full text-btn-primary-bg hover:underline font-semibold">&larr; Back to Folders</a>
        <h1 class="text-2xl text-center font-bold text-headline max-w-full w-full truncate"><%= folder.name %></h1>
        <button onclick="openModal('upload-modal')" class="cursor-pointer flex gap-1 bg-btn-primary-bg hover:bg-btn-primary-hover text-white text-center font-semibold rounded max-w-[160px] w-full px-2 py-2 transition">
          <img src="/images/upload.png" alt="upload" class="invert ml-1">
          <span>Upload Files</span>
        </button>
      </div>

      <% if (!files || files.length === 0) { %>
        <div class="text-center text-gray-300 mt-20">
          <h2 class="text-2xl font-bold mb-2">No Files Yet</h2>
          <p>Start by uploading files using the <b>Upload</b> button above</p>
        </div>
      <% } else { %>
        <!-- Files Grid -->
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6 w-full max-w-6xl">
          <% files.forEach((file, i) => { %>
            <div class="relative bg-bg2 border border-gray-600 rounded-xl p-7 flex flex-col items-center shadow-md">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-15 h-15 mb-2 fill-btn-primary-bg" viewBox="0 0 50 50">
                <path d="M7 2v46h36V14.6L30.4 2H7zm2 2h20v12h12v30H9V4zm22 1.4L39.6 14H31V5.4z"/>
              </svg>

              <span class="text-sm text-headline font-bold text-center truncate w-full max-w-full" title="<%= file.name %>">
                <%= file.name%>
              </span>
              <span class="text-sm text-icon-tertiary font-bold text-center truncate w-full max-w-full">
                <%= file.displayType %>
              </span>

              <span class="text-sm font-mono">
                <%= file.displaySize %>
              </span>

              <button onclick="toggleMenu('menu-<%= i %>')" class="absolute top-2 right-2 text-gray-400 hover:text-gray-200 cursor-pointer">
                &#x22EE;
              </button>

              <!-- File Menu -->
              <div id="menu-<%= i %>" class="file-menu hidden absolute top-10 right-2 bg-bg2 border border-gray-600 rounded-md shadow-lg w-36 flex flex-col z-20">
                <button
                onclick="openFileInfoModal('<%= file.id %>')" 
                class="file-info-btn hover:bg-bg1 text-left px-3 py-2 text-sm cursor-pointer"
                >
                  File Info
                </button>
                <a class="hover:bg-bg1 text-left px-3 py-2 text-sm cursor-pointer" href="<%= file.link %>?download=<%= file.name %>" download>Download</a>
                <form action="/files/<%= file.id %>/delete" method="post">
                  <button type="submit" class="hover:bg-bg1 w-full text-left px-3 py-2 text-sm text-red-400 cursor-pointer">Delete</button>
                </form>
                <button onclick="openShareModal('<%= file.id %>')" class="hover:bg-bg1 text-left px-3 py-2 text-sm text-violet-400 cursor-pointer">Share</button>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </main>

    <!-- Upload File Modal -->
    <div id="upload-modal" class="fixed hidden inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50">
      <div class="bg-bg2 text-headline p-8 rounded shadow-lg w-full max-w-md relative">
        <button onclick="closeModal('upload-modal')" class="absolute top-2 right-2 text-gray-400 hover:text-gray-200 text-2xl">&times;</button>
        <h2 class="text-xl font-bold mb-4 text-center">Upload Files</h2>
        <form action="/folders/<%= folder.id %>/upload" method="post" enctype="multipart/form-data" class="flex flex-col gap-4">
          <input type="file" name="files" multiple required
            class="border-2 border-gray-400 rounded px-3 py-2 focus:border-btn-primary-bg outline-none bg-bg1 text-sm"/>
          <button type="submit" class="bg-btn-primary-bg hover:bg-btn-primary-hover text-white font-semibold rounded py-2 transition">
            Upload
          </button>
        </form>
      </div>
    </div>

    <!-- File Info Modal -->
    <div 
    id="file-info-modal"
    class="hidden fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50">
      <div class="bg-bg2 text-headline p-8 rounded shadow-lg w-full max-w-lg relative">
        <!-- File Header -->
        <button
        onclick="closeModal('file-info-modal')"
        class="absolute top-2 right-2 text-gray-400 hover:text-gray-200 text-2xl cursor-pointer">
          &times;
        </button>
        <h2 class="text-xl font-bold mb-4 text-center text-violet-300">
          File Details
        </h2>

        <!-- File Name -->
        <div class="flex justify-center break-all max-w-full w-full">
          <span 
          id="file-name" 
          class="font-bold">
            Loading...
          </span>
        </div>

        <!-- File Details -->
        <div class="flex flex-col gap-5 text-sm sm:text-base">
          <div class="flex justify-between flex-wrap border-b border-gray-700 pb-1">
            <span class="text-gray-400">Type:</span>
            <span id="file-type" class="text-gray-200 break-all">
              Loading...
            </span>
          </div>

          <div class="flex justify-between flex-wrap border-b border-gray-700 pb-1">
            <span class="text-gray-400">Size:</span>
            <span id="file-size" class="text-gray-200 break-all">
              Loading...
            </span>
          </div>

          <div class="flex justify-between flex-wrap border-b border-gray-700 pb-1">
            <span class="text-gray-400">Created:</span>
            <span id="file-created" class="text-gray-200 break-all">
              Loading...
            </span>
          </div>

        </div>
      </div>
    </div>

    <!-- Share Link Modal -->
    <div id="share-modal" class="fixed hidden inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50">
      <div class="bg-bg2 text-headline p-8 rounded shadow-lg w-full max-w-lg relative">
        <button onclick="closeModal('share-modal')" class="absolute top-2 right-2 text-gray-400 hover:text-gray-200 text-2xl cursor-pointer">&times;</button>
        <h2 class="text-xl font-bold mb-4 text-center text-violet-300">Share Public URL</h2>
        
        <p class="text-sm text-gray-400 mb-4 text-center">Select Visibility Duration</p>
        
        <div class="grid grid-cols-3 gap-3 mb-4">
          <% ["300","1800","3600","86400","604800","2592000"].forEach((t,i)=>{ %>
            <div>
              <input 
              type="radio"
              id="duration-<%= t %>"
              name="duration"
              value="<%= t %>"
              class="hidden peer"
              />
              <label 
              for="duration-<%= t %>"
              class="block text-center border border-gray-500 rounded py-2 cursor-pointer hover:bg-btn-primary-hover peer-checked:bg-btn-primary-bg/78 peer-checked:text-shadow-tag-text peer-checked:border-gray-500 transition-colors duration-100 ease-in-out"
              >
                <%= t==="300"?"5 min":t==="1800"?"30 min":t==="3600"?"1h":t==="86400"?"1 day":t==="604800"?"7 days":"30 days" %>
              </label>
            </div>
          <% }) %>
        </div>

        <div class="flex items-center border border-gray-600 rounded px-3 py-2 mb-4">
          <input id="share-link" type="text" readonly placeholder="Select a visibility duration and Click Generate Link"
            class=" cursor-not-allowed bg-transparent caret-transparent flex-1 outline-none text-sm text-gray-300"/>
          <button onclick="copyLink(event,document.getElementById('share-link').value)" class="cursor-pointer text-xs text-icon-tertiary font-bold ml-2">Copy</button>
        </div>

        <div class="flex justify-end gap-3">
          <button onclick="closeModal('share-modal')" class="border border-gray-500 rounded px-4 py-2 text-sm hover:bg-bg1 cursor-pointer">Cancel</button>
          <button onclick="generateSignedUrl()" class="bg-btn-primary-bg hover:bg-btn-primary-hover text-white font-semibold rounded px-4 py-2 text-sm transition cursor-pointer">
            Generate Link
          </button>
        </div>
      </div>
    </div>
  </body>
</html>
